{
  "name": "DOMspy",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist/*",
    "copy-assets": "mkdir -p dist/images && cp public/images/DOMspy*.png dist/images/ && cp manifest.json dist/ && cp public/popup.html dist/",
    "build": "npm run clean && tsx ./scripts/build.ts && npm run copy-assets",
    "dev": "npx vite build --watch",
    "preview": "npx vite preview",
    "test": "vitest",
    "check": "svelte-check",
    "lint": "eslint . --ext .js,.svelte",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@testing-library/svelte": "^5.2.6",
    "@tsconfig/svelte": "^5.0.4",
    "@types/chrome": "^0.0.xxx",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.x.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.20.0",
    "eslint-plugin-svelte": "^2.0.0",
    "fs-extra": "^11.3.0",
    "prettier": "^3.5.0",
    "prettier-plugin-svelte": "^3.3.3",
    "svelte": "^5.19.9",
    "svelte-check": "^4.1.4",
    "svelte-preprocess": "^6.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vitest": "^3.0.5",
    "tsx": "^4.7.0"
  }
}
