{
  "name": "DOMspy",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist/*",
    "copy-assets": "mkdir -p dist/images && cp public/images/DOMspy*.png dist/images/ && cp manifest.json dist/ && cp public/popup.html dist/",
    "build": "npm run clean && tsx ./scripts/build.ts && npm run copy-assets",
    "dev": "npx vite build --watch",
    "preview": "npx vite preview",
    "test": "vitest",
    "check": "svelte-check",
    "lint": "eslint . --ext .js,.svelte",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@testing-library/svelte": "^4.0.0",
    "@tsconfig/svelte": "^5.0.4",
    "@types/chrome": "^0.0.xxx",
    "@types/eslint": "^8.0.0",
    "@types/node": "^18.x.x",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-svelte": "^2.0.0",
    "fs-extra": "^11.2.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^2.0.0",
    "svelte": "^4.2.0",
    "svelte-check": "^3.0.0",
    "svelte-preprocess": "^6.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "tsx": "^4.7.0"
  }
}
